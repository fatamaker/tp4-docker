{# templates/articles/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
<h1>Liste des Articles</h1>
<table class="table">
    <tr>
        <th>Nom</th>
        <th>Prix</th>
        <th>Actions</th>
    </tr>
    {% for article in articles %}
    <tr>
        <td>{{ article.nom }}</td>
        <td>{{ article.prix }}</td>
        <td>
            <a href="/article/{{ article.id }}" class="btn btn-info">DÃ©tails</a>
            <a href="/article/edit/{{ article.id }}" class="btn btn-warning">Modifier</a>
            <form action="/article/delete/{{ article.id }}" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </form>
        </td>
    </tr>
    {% endfor %}
</table>
{% endblock %}
